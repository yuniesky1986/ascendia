<?xml version="1.0" encoding="utf-8"?>
<!-- vim:fdn=3:
-->
<openerp>
    <data>
        <template id="auth_signup.fields_redefine" name="Auth Signup/ResetPassword form fields(redefine)" inherit_id="auth_signup.fields">
	        <xpath expr="//input[@id='password']" position="replace">
	        	<input type="password" name="password" id="password" class="form-control"
                    t-att-autofocus="'autofocus' if only_passwords else None"/>
	        </xpath>
	        <xpath expr="//input[@id='confirm_password']" position="replace">
	        	<input type="password" name="confirm_password" id="confirm_password" class="form-control"/>
	        </xpath>
        </template>

    </data>
</openerp>
